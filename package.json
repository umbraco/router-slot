{
  "name": "router-slot",
  "version": "2.3.0",
  "description": "A powerful web component router",
  "license": "MIT",
  "author": "Andreas Mehlsen",
  "types": "index.d.ts",
  "module": "index.js",
  "main": "index.js",
  "bugs": {
    "url": "https://github.com/andreasbm/router-slot/issues"
  },
  "homepage": "https://github.com/andreasbm/router-slot#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreasbm/router-slot.git"
  },
  "keywords": [
    "webapp",
    "custom",
    "elements",
    "powerful",
    "routes",
    "routing",
    "route",
    "router",
    "slot",
    "fragments",
    "vanilla",
    "web",
    "component",
    "router",
    "navigation",
    "zero dependencies"
  ],
  "scripts": {
    "b:demo:dev": "vite build src/demo",
    "b:demo:prod": "vite build src/demo --mode production",
    "s:dev": "vite src/demo",
    "s:prod": "vite src/demo --mode production",
    "s": "npm run s:dev",
    "test": "wtr src/test/**/*.test.ts --node-resolve",
    "test:watch": "wtr src/test/**/*.test.ts --node-resolve --watch",
    "ncu": "ncu -u -a && npm update && npm install",
    "b:lib": "node pre-build.js && tsc -p tsconfig.build.json && npm run custom-elements-json",
    "readme": "node node_modules/.bin/readme generate",
    "postversion": "npm run b:lib",
    "publish:patch": "np patch --contents=dist --no-cleanup",
    "publish:minor": "np minor --contents=dist --no-cleanup",
    "publish:major": "np major --contents=dist --no-cleanup",
    "custom-elements-json": "npx wca analyze src/lib --format json --outFile dist/custom-elements.json"
  },
  "devDependencies": {
    "@open-wc/testing": "^3.1.7",
    "@web/dev-server-esbuild": "^0.3.5",
    "@web/test-runner": "^0.15.2",
    "@web/test-runner-playwright": "^0.9.0",
    "fs-extra": "^11.1.1",
    "lit": "^2.7.1",
    "rimraf": "^4.4.1",
    "rollup": "^3.20.2",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "web-component-analyzer": "^2.0.0-next.4",
    "weightless": "^0.0.37"
  },
  "contributors": [
    {
      "name": "Andreas Mehlsen",
      "url": "https://twitter.com/andreasmehlsen",
      "img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
    },
    {
      "name": "You?",
      "img": "https://joeschmoe.io/api/v1/random",
      "url": "https://github.com/andreasbm/router-slot/blob/master/CONTRIBUTING.md"
    }
  ]
}
